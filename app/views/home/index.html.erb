<h1 class="text-4xl font-semibold text-neutral-800 mb-4">Hello</h1>

<%= link_to 'New notebook', new_notebook_path, data: { turbo_frame: dom_id(Notebook.new) }, class: 'p-2 bg-blue-500 text-white rounded-sm w-[130px] text-center font-medium mb-4' %>

<% if @notebooks.empty? %>
  <%= turbo_frame_tag Notebook.new do %>
    <p>Nothing to show</p>
  <% end %>
<% else %>
  <div>
    <%= turbo_frame_tag Notebook.new %>
    
    <h3 class="text-lg mt-8 mb-4 font-medium">My notebooks</h3>
    <%= turbo_frame_tag 'notebooks', class: 'flex flex-col gap-2' do %>
      <%= render @notebooks %>
    <% end %>
  </div>
<% end %>